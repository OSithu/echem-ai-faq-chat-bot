# Production Environment Configuration Template
# Copy this to .env and update values for your production environment

# Application Settings
APP_NAME=e-Chem-Chatbot
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_URL=https://your-domain.com

# Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging - IMPORTANT: Set to error or warning in production
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Database - SQLite by default, change if using MySQL/PostgreSQL
DB_CONNECTION=sqlite
# DB_HOST=your-db-host
# DB_PORT=3306
# DB_DATABASE=echem_db
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_db_password

# Sessions
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com

# Cache
CACHE_STORE=database

# Queue
QUEUE_CONNECTION=database

# CORS Configuration - CRITICAL: Update with your frontend domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Gemini API Configuration - Store securely in environment variables!
# Never commit this to version control
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Optional: Mail Configuration (if you add email notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Optional: AWS Configuration (if using AWS services)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
